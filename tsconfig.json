{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "es6",
    "target": "ES2020",
    "allowJs": false,
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "paths": {
      "@app/models": ["app/models"],
      "@app/utils": ["app/utils"]
    },
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"]
}
